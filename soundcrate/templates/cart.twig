 <div class="cart">
    <h2 class="cart__headline">Shopping Cart</h2>
    <div class="cart__empty">
      <p>Your cart is empty.</p>
    </div>
    <div class="cart__content">
      <div class="cart__content-item">
        <div class="cart__content-item-wrapper">
          <img class="cart__content-item-wrapper-image" alt="">
          <div class="cart__content-item-wrapper-info-amount">
            <p class="cart__content-item-title"></p>
            <div class="cart__content-wrapper">
              <button class="cart__content-button">-</button>
              <span class="cart__content-item-quantity"></span>
              <button class="cart__content-button">+</button>
            </div>
            <p class="cart__content-item-VAT">VAT</p>
            <p class="cart__content-item-price">Price: $ each</p>
            <p class="cart__content-item-subtotal">Subtotal (per item): $ </p>
            <p class="cart__content-item-description"></p>
          </div>
        </div>
      </div>
      <p class="cart__totalPrice">Total: $ </p>
      <div class="cart__buttonsWrapper">
        <a ><button class="cart__orderButton">Order Now</button></a>
        <button class="cart__clearButton" >Clear Shopping Cart</button>
      </div>
    </div>
  </div>